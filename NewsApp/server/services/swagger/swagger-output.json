                  "type": "object",
                  "properties": {
                    "email": { "type": "string" },
                    "password": { "type": "string" },
                    "fullName": { "type": "string" },
                    "preferences": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "categories": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "_id": { "type": "string" },
                    "createdAt": { "type": "string", "format": "date-time" },
                    "updatedAt": { "type": "string", "format": "date-time" },
                    "__v": { "type": "integer" }
                  }
                }
              }
            }
          },
          "default": { "description": "Unexpected error" }
        }
      }
    },
    "/news/change-user-preferences": {
      "put": {
