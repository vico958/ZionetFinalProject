      "put": {
        "description": "Change user password.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "userWithNewPassword": {
                  "type": "object",
                  "properties": {
                    "email": { "type": "string" },
                    "newPassword": { "type": "string" },
                    "oldPassword": { "type": "string" }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User password updated successfully and a confirmation message sent.",
