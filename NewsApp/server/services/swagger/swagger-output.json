{
  "swagger": "2.0",
  "info": {
    "title": "NewsApp Service API",
    "description": "API for managing users and their news preferences in the NewsApp service",
    "version": "1.0.0"
  },
  "host": "localhost:3001",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/news/register": {
      "post": {
        "description": "Register a new user with email, password, full name, preferences, and categories.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "userToRegister": {
                  "type": "object",
                  "properties": {
                    "email": { "type": "string" },
                    "password": { "type": "string" },
                    "fullName": { "type": "string" },
                    "preferences": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "categories": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User registered successfully and a confirmation message sent.",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" },
                "data": {
                  "type": "object",
                  "properties": {
                    "email": { "type": "string" },
                    "password": { "type": "string" },
                    "fullName": { "type": "string" },
                    "preferences": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "categories": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "_id": { "type": "string" },
                    "createdAt": { "type": "string", "format": "date-time" },
                    "updatedAt": { "type": "string", "format": "date-time" },
                    "__v": { "type": "integer" }
                  }
                }
              }
            }
          },
          "default": { "description": "Unexpected error" }
        }
      }
    },
    "/news/remove-user-from-receiving-news": {
      "delete": {
        "description": "Remove a user from receiving news updates.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "type": "object",
                  "properties": {
                    "email": { "type": "string" },
                    "password": { "type": "string" }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User removed successfully and a confirmation message sent.",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" },
                "data": {
                  "type": "object",
                  "properties": {
                    "acknowledged": { "type": "boolean" },
                    "deletedCount": { "type": "integer" }
                  }
                }
              }
            }
          },
          "default": { "description": "Unexpected error" }
        }
      }
    },
    "/news/change-user-categories-and-preferences": {
      "put": {
        "description": "Change user categories and preferences.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "userWithNewSettings": {
                  "type": "object",
                  "properties": {
                    "email": { "type": "string" },
                    "password": { "type": "string" },
                    "newPreferences": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "newCategories": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User preferences and categories updated successfully and a confirmation message sent.",
