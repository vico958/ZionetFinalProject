{
  "swagger": "2.0",
  "info": {
    "title": "Email Service API",
    "description": "API for sending emails",
    "version": "1.0.0"
  },
  "host": "localhost:3006",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/email/send-email": {
      "post": {
        "description": "Send an email with the specified details.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "emailInfo": {
                  "type": "object",
                  "required": [
                    "emailHost",
                    "emailUser",
                    "emailPassword",
                    "emailFrom",
                    "emailTo",
                    "emailSubject",
                    "emailTextHtml"
                  ],
                  "properties": {
                    "emailHost": {
                      "type": "string",
                      "description": "The email server host."
                    },
                    "emailUser": {
                      "type": "string",
                      "format": "email",
                      "description": "The email account user."
                    },
                    "emailPassword": {
                      "type": "string",
                      "description": "The email account password."
                    },
                    "emailFrom": {
                      "type": "string",
                      "format": "email",
                      "description": "The sender's email address."
                    },
                    "emailTo": {
                      "type": "string",
                      "format": "email",
                      "description": "The recipient's email address."
                    },
                    "emailSubject": {
                      "type": "string",
                      "description": "The subject of the email."
                    },
                    "emailTextHtml": {
                      "type": "string",
                      "description": "The HTML content of the email."
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Email sent successfully.",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" },
                "info": { "type": "string" }
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" },
                "error": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "/email/": {
      "get": {
        "description": "Health check endpoint for the email service.",
        "responses": {
          "200": {
            "description": "Hello world from email service",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
